{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <h1>Liste des Produits</h1>
        </div>
        <div class="col-md-2 mt-2">
            <a href="{{ path('produit_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i>
            </a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>Stock</th>
            <th>Prix Unitaire</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.prixUnitaire }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}"
                       class="btn btn-info">
                        <i class="fas fa-info"></i>
                    </a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}"
                       class="btn btn-secondary">
                        <i class="fas fa-edit"></i>
                    </a>
                    {{ include('produit/_delete_form.html.twig', {'button_label': false}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">AUCUN PRODUIT</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
